{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "jsx": "react",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "noEmit": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@spearly/sdk-js",
      "@types/node",
      "@types/jest",
      "jest"
    ]
  },
  "exclude": ["node_modules"]
}
